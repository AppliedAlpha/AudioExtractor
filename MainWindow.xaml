<Window x:Class="AudioExtractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioExtractor"
        mc:Ignorable="d"
        Title="AudioExtractor" Height="120" Width="240">
    <Grid>
        <Button Content="Load MP4" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="75" Click="LoadButtonClicked"/>
        <Button Content="Convert" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="75" Click="ConvertButtonClicked"/>
    </Grid>
</Window>